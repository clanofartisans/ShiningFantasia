{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020", // "node12" in TypeScript 4.5
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@common": [
        "../common"
      ],
      "@common/*": [
        "../common/*"
      ],
      "@components": [
        "components"
      ],
      "@components/*": [
        "components/*"
      ],
      "@store": [
        "store"
      ],
      "@store/*": [
        "store/*"
      ],
      "@views": [
        "views"
      ],
      "@views/*": [
        "views/*"
      ]
    }
  },
  "include": [
    "@common/**/*.ts",
    "@common/**/*.d.ts",
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.vue"
  ]
}