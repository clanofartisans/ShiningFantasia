{
    "compilerOptions": {
      "target": "esnext",
      "module": "es2020", // "node12" in TypeScript 4.5
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": [
        "esnext",
        "dom"
      ],
      "baseUrl": "src/renderer",
      "outDir": "dist"
    },
    "paths": {
        "*": ["node_modules/*"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue"
    ]
}
